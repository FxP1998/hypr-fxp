    "battery": {
        "format": "{icon}",
        "format-full": "󱈏",
        "format-charging": " \n{capacity}%",
        "format-charging-full": " 󱈏\n{capacity}%",
        "format-discharging": "{icon}",
        "format-icons": ["", "", "", "", ""],
        "states": {
            "critical": 15,
            "warning": 30
        },
        "tooltip-format": "   {capacity}% "
